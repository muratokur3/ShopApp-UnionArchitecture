@using ShopApp.Business.Models.DTOs.CategoryDtos
@model CategoryUpdateDto

<div class="h3">
 @Model.Name   Edit Category
</div>
<hr />

 <div class="row">
    <div class="col-md-4">
        <form asp-controller="Category" asp-action="CategoryEdit" method="post">
            <input type="hidden" name="CategoryId" value="@Model.CategoryId" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row mb-3">
                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Name" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>
            </div>

            <div class="form-group row mb-3">
                <label asp-for="Url" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input class="form-control" asp-for="Url" />
                    <span class="text-danger" asp-validation-for="Url"></span>
                </div>
            </div>



            <div class="form-group row mb-3">
                <div class="col-sm-10 offset-sm-2">
                    <button type="submit" class="btn btn-primary">Update Category</button>
                </div>
            </div>
       
        </form>
    </div>
  
</div>

@section Scripts {
    <script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
} 